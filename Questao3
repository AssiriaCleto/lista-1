import java.util.Scanner;

public class Main {

  public static void main(String[] args) {
    Scanner ref = new
  Scanner(System.in);

    System.out.println("insira um número:");
    int num1 = ref.nextInt();

    if (num1 % 2 ==0){
      System.out.println("o número é par");
    }
      
    else {
      System.out.println("o número é impar");
  }

}
